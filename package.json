  "dependencies": {
    "express": "^4.15.3"
  },
  "devDependencies": {
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "style-loader": "^0.18.2",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1"
  }
}
